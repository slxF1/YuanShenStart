<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoteResultsActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="@drawable/frame"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        >

        <TextView
            android:id="@+id/btn_result_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主题：游戏角色投票"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            ></TextView>

        <TextView
            android:id="@+id/btn_result_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="关于原神你最喜欢的角色是？"
            android:textSize="16dp"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    ></androidx.recyclerview.widget.RecyclerView>




            </RelativeLayout>





        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/tv_show_count1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已投:"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        ></TextView>

    <TextView
        android:id="@+id/btn_result_voted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   "
        android:layout_marginLeft="30dp"
        ></TextView>

    <TextView
        android:id="@+id/tv_show_count0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未投:"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        ></TextView>

    <TextView
        android:id="@+id/btn_result_notVoted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   "
        android:layout_marginLeft="30dp"
        ></TextView>

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:backgroundTint="#CDCDCD"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        ></Button>



</LinearLayout>